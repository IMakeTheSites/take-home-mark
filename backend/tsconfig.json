{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "express", "cors"]
  },
  "include": ["src/index.ts", "src/routes/**/*.ts", "src/controllers/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
